@model TextileCRM.Domain.Entities.Employee

@{
    ViewData["Title"] = "Çalışan Detayı";
}

<div class="container">
    <h1>Çalışan Detayı</h1>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Ad</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Soyad</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">E-posta</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Departman</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Pozisyon</dt>
                <dd class="col-sm-9">@Model.Position</dd>

                <dt class="col-sm-3">Maaş</dt>
                <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>

                <dt class="col-sm-3">İşe Giriş Tarihi</dt>
                <dd class="col-sm-9">@Model.HireDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Oluşturma Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div>

