@model TextileCRM.Domain.Entities.Employee

@{
    ViewData["Title"] = "Çalışan Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-9">
            <!-- Başlık Bölümü -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="mb-1">
                        <i class="bi bi-pencil-square text-warning"></i> Çalışan Düzenle
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-hash"></i> Çalışan ID: <strong>@Model.Id</strong> | 
                        <i class="bi bi-person"></i> <strong>@Model.FullName</strong>
                    </p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />
                        
                        <!-- Kişisel Bilgiler -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person-fill text-warning"></i> Kişisel Bilgiler
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label fw-semibold">
                                        <i class="bi bi-person"></i> Ad <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="FirstName" class="form-control" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label fw-semibold">
                                        <i class="bi bi-person"></i> Soyad <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="LastName" class="form-control" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="bi bi-envelope"></i> E-posta <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label fw-semibold">
                                        <i class="bi bi-telephone"></i> Telefon <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Phone" class="form-control" type="tel" required />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Address" class="form-label fw-semibold">
                                        <i class="bi bi-geo-alt"></i> Adres
                                    </label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- İş Bilgileri -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-briefcase-fill text-warning"></i> İş Bilgileri
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Department" class="form-label fw-semibold">
                                        <i class="bi bi-building"></i> Departman <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="Department" class="form-control" asp-items="Html.GetEnumSelectList<TextileCRM.Domain.Entities.Department>()" required></select>
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Position" class="form-label fw-semibold">
                                        <i class="bi bi-award"></i> Pozisyon <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Position" class="form-control" required />
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="HireDate" class="form-label fw-semibold">
                                        <i class="bi bi-calendar-check"></i> İşe Giriş Tarihi <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="HireDate" class="form-control" type="date" required />
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Salary" class="form-label fw-semibold">
                                        <i class="bi bi-cash"></i> Maaş <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input asp-for="Salary" class="form-control" type="number" step="0.01" min="0" required />
                                        <span class="input-group-text">TL</span>
                                    </div>
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="TerminationDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-x"></i> İşten Çıkış Tarihi
                                </label>
                                <input asp-for="TerminationDate" class="form-control" type="date" />
                                <small class="form-text text-muted">Aktif çalışanlar için boş bırakabilirsiniz</small>
                                <span asp-validation-for="TerminationDate" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Form Butonları -->
                        <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save-fill"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bilgilendirme Kartı -->
            <div class="alert alert-warning mt-3 d-flex align-items-start">
                <i class="bi bi-exclamation-triangle fs-4 me-3"></i>
                <div>
                    <strong>Dikkat:</strong> Çalışan bilgilerini değiştirmek, mesai kayıtlarını etkileyebilir.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
