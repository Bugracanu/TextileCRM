@model TextileCRM.Domain.Entities.Employee

@{
    ViewData["Title"] = "Yeni Çalışan";
}

<div class="container">
    <h1>Yeni Çalışan</h1>

    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="control-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="control-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <input type="hidden" asp-for="Email" value="" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Phone" class="control-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Salary" class="control-label">Maaş</label>
                            <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Department" class="control-label">Departman</label>
                            <select asp-for="Department" class="form-control" asp-items="Html.GetEnumSelectList<TextileCRM.Domain.Entities.Department>()"></select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Position" class="control-label">Pozisyon</label>
                            <input asp-for="Position" class="form-control" />
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="HireDate" class="control-label">İşe Giriş Tarihi</label>
                            <input asp-for="HireDate" class="form-control" type="date" />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TerminationDate" class="control-label">İşten Çıkış Tarihi</label>
                            <input asp-for="TerminationDate" class="form-control" type="date" />
                            <span asp-validation-for="TerminationDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Address" class="control-label">Adres</label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <input type="submit" value="Oluştur" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

