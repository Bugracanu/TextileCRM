@model IEnumerable<TextileCRM.Domain.Entities.Employee>

@{
    ViewData["Title"] = "Çalışanlar";
}

<div class="container">
    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-person-badge text-warning"></i> Çalışanlar
            <span class="badge bg-warning text-dark ms-2">@Model.Count()</span>
        </h1>
        <a asp-action="Create" class="btn btn-warning btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Çalışan Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;" class="text-center">ID</th>
                                <th>Çalışan Bilgileri</th>
                                <th style="width: 150px;">Departman</th>
                                <th style="width: 150px;">Pozisyon</th>
                                <th>İletişim</th>
                                <th style="width: 120px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="employee-row">
                                    <td class="text-center align-middle">
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <div>
                                            <strong class="d-block">@item.FullName</strong>
                                            <small class="text-muted">
                                                @if (item.TerminationDate.HasValue)
                                                {
                                                    <span class="badge badge-sm bg-danger">Ayrılmış</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-sm bg-success">Aktif</span>
                                                }
                                            </small>
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge bg-light text-dark">@item.Department</span>
                                    </td>
                                    <td class="align-middle">@item.Position</td>
                                    <td class="align-middle">
                                        <div>
                                            <a href="mailto:@item.Email" class="d-block text-decoration-none mb-1" title="Email gönder">
                                                <i class="bi bi-envelope"></i> @item.Email
                                            </a>
                                            <a href="tel:@item.Phone" class="d-block text-decoration-none" title="Ara">
                                                <i class="bi bi-telephone"></i> @item.Phone
                                            </a>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger" 
                                               title="Sil"
                                               onclick="return confirm('Bu çalışanı silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3"></i>
            <div>
                <strong>Henüz çalışan kaydı bulunmamaktadır.</strong>
                <p class="mb-0">Yeni çalışan eklemek için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        </div>
    }
</div>