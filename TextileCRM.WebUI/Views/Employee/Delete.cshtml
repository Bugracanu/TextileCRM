@model TextileCRM.Domain.Entities.Employee

@{
    ViewData["Title"] = "Çalışan Sil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Başlık Bölümü -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="mb-1">
                        <i class="bi bi-trash text-danger"></i> Çalışan Sil
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-hash"></i> Çalışan ID: <strong>@Model.Id</strong>
                    </p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>

            <!-- Uyarı Mesajı -->
            <div class="alert alert-danger d-flex align-items-start mb-4">
                <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-2">Dikkat! Bu işlem geri alınamaz</h5>
                    <p class="mb-0">Bu çalışanı silmek istediğinize emin misiniz? İlişkili tüm veriler (mesai kayıtları vb.) de silinecektir.</p>
                </div>
            </div>

            <!-- Çalışan Bilgileri -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge-fill text-warning"></i> Silinecek Çalışan Bilgileri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-person"></i> Ad Soyad</label>
                                <p class="fw-bold mb-0">@Model.FullName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-envelope"></i> E-posta</label>
                                <p class="fw-bold mb-0">
                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-telephone"></i> Telefon</label>
                                <p class="fw-bold mb-0">
                                    <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-building"></i> Departman</label>
                                <p class="fw-bold mb-0">
                                    <span class="badge bg-light text-dark">@Model.Department</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-award"></i> Pozisyon</label>
                                <p class="fw-bold mb-0">@Model.Position</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-cash"></i> Maaş</label>
                                <p class="fw-bold mb-0 text-success">@Model.Salary.ToString("C")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-calendar-check"></i> İşe Giriş Tarihi</label>
                                <p class="fw-bold mb-0">@Model.HireDate.ToString("dd MMMM yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted mb-1"><i class="bi bi-calendar-x"></i> İşten Çıkış Tarihi</label>
                                <p class="fw-bold mb-0">
                                    @if (Model.TerminationDate.HasValue)
                                    {
                                        <span class="badge bg-danger">@Model.TerminationDate.Value.ToString("dd MMMM yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mb-0">
                            <label class="text-muted mb-1"><i class="bi bi-geo-alt"></i> Adres</label>
                            <p class="fw-bold mb-0">@Model.Address</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Form Butonları -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> İptal Et
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Evet, Çalışanı Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
