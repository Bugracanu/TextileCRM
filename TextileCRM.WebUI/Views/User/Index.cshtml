@model IEnumerable<TextileCRM.Domain.Entities.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container">
    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-people-fill text-danger"></i> Kullanıcı Yönetimi
            <span class="badge bg-danger ms-2">@Model.Count()</span>
        </h1>
        <a asp-action="Create" class="btn btn-danger btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Kullanıcı Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;" class="text-center">ID</th>
                                <th>Kullanıcı Adı</th>
                                <th style="width: 120px;">Rol</th>
                                <th style="width: 100px;" class="text-center">Durum</th>
                                <th style="width: 120px;">Kayıt Tarihi</th>
                                <th style="width: 120px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="user-row">
                                    <td class="text-center align-middle">
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <div>
                                            <strong class="d-block">@item.Username</strong>
                                            @if (item.Id == 1)
                                            {
                                                <small class="text-muted">
                                                    <i class="bi bi-shield-fill-check"></i> Sistem Yöneticisi
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge @(item.Role == "Admin" ? "bg-danger" : item.Role == "Manager" ? "bg-warning text-dark" : "bg-info")">
                                            <i class="bi @(item.Role == "Admin" ? "bi-shield-fill" : item.Role == "Manager" ? "bi-star-fill" : "bi-person-fill")"></i>
                                            @item.Role
                                        </span>
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle-fill"></i> Pasif
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">@item.CreatedDate.ToString("dd MMM yyyy")</small>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (item.Id != 1)
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                                   class="btn btn-sm btn-outline-danger" 
                                                   title="Sil"
                                                   onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3"></i>
            <div>
                <strong>Henüz kullanıcı kaydı bulunmamaktadır.</strong>
                <p class="mb-0">Yeni kullanıcı eklemek için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        </div>
    }
</div>

