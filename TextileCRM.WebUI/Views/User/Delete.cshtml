@model TextileCRM.Domain.Entities.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Başlık Bölümü -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="mb-1">
                        <i class="bi bi-trash text-danger"></i> Kullanıcı Sil
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-hash"></i> Kullanıcı ID: <strong>@Model.Id</strong>
                    </p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>

            <!-- Uyarı Mesajı -->
            <div class="alert alert-danger d-flex align-items-start mb-4">
                <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-2">Dikkat! Bu işlem geri alınamaz</h5>
                    <p class="mb-0">Bu kullanıcıyı silmek istediğinize emin misiniz? Kullanıcı sistemden kalıcı olarak silinecektir.</p>
                </div>
            </div>

            <!-- Kullanıcı Bilgileri -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-person-fill text-danger"></i> Silinecek Kullanıcı Bilgileri
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="bi bi-person-circle"></i> Kullanıcı Adı</label>
                        <p class="fw-bold mb-0">@Model.Username</p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="bi bi-star"></i> Rol</label>
                        <p class="fw-bold mb-0">
                            <span class="badge @(Model.Role == "Admin" ? "bg-danger" : Model.Role == "Manager" ? "bg-warning text-dark" : "bg-info")">
                                <i class="bi @(Model.Role == "Admin" ? "bi-shield-fill" : Model.Role == "Manager" ? "bi-star-fill" : "bi-person-fill")"></i>
                                @Model.Role
                            </span>
                        </p>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted mb-1"><i class="bi bi-check-circle"></i> Durum</label>
                        <p class="fw-bold mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle-fill"></i> Pasif
                                </span>
                            }
                        </p>
                    </div>

                    <div class="mb-0">
                        <label class="text-muted mb-1"><i class="bi bi-calendar"></i> Kayıt Tarihi</label>
                        <p class="fw-bold mb-0">@Model.CreatedDate.ToString("dd MMMM yyyy, HH:mm")</p>
                    </div>
                </div>
            </div>

            <!-- Form Butonları -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle"></i> İptal Et
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-trash-fill"></i> Evet, Kullanıcıyı Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
