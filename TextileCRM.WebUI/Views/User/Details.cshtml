@model TextileCRM.Domain.Entities.User

@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<div class="container">
    <h1>Kullanıcı Detayı</h1>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Kullanıcı Adı</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Rol</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Role == "Admin" ? "bg-danger" : Model.Role == "Manager" ? "bg-warning" : "bg-info")">
                        @Model.Role
                    </span>
                </dd>

                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </dd>

                <dt class="col-sm-3">Kayıt Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        @if (Model.Id != 1)
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
        }
    </div>
</div>

