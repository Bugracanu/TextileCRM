@{
    ViewData["Title"] = "Stok Uyarıları";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="bi bi-exclamation-triangle"></i> Stok Uyarıları</h2>
                    <p class="text-muted">Düşük stok ve kritik seviye uyarıları</p>
                </div>
                <button class="btn btn-warning" onclick="checkAllProducts()">
                    <i class="bi bi-arrow-repeat"></i> Tüm Stokları Kontrol Et
                </button>
            </div>
        </div>
    </div>

    <!-- Aktif Uyarılar -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-4 pb-3">
                    <h5 class="mb-0"><i class="bi bi-bell-fill text-warning"></i> Aktif Uyarılar</h5>
                </div>
                <div class="card-body p-0">
                    <div id="stockAlertsContainer" class="list-group list-group-flush">
                        <div class="text-center py-5">
                            <div class="spinner-border text-warning" role="status"></div>
                            <p class="text-muted mt-2">Yükleniyor...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadStockAlerts() {
            fetch('/api/stockalertsapi/active')
                .then(res => res.json())
                .then(data => {
                    const container = document.getElementById('stockAlertsContainer');
                    container.innerHTML = '';
                    
                    if (data.length === 0) {
                        container.innerHTML = `
                            <div class="text-center py-5 text-success">
                                <i class="bi bi-check-circle fs-1"></i>
                                <p class="mt-3 mb-0">Aktif stok uyarısı bulunmuyor</p>
                            </div>
                        `;
                        return;
                    }
                    
                    data.forEach(alert => {
                        const alertTypeMap = ['Düşük Stok', 'Stok Bitti', 'Yeniden Sipariş', 'Fazla Stok'];
                        const alertColorMap = ['warning', 'danger', 'info', 'primary'];
                        
                        const item = document.createElement('div');
                        item.className = 'list-group-item';
                        item.innerHTML = `
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-${alertColorMap[alert.alertType]} me-2">
                                            ${alertTypeMap[alert.alertType]}
                                        </span>
                                        <strong>Ürün #${alert.productId}</strong>
                                    </div>
                                    <p class="mb-1">
                                        <i class="bi bi-box text-muted"></i> Mevcut Stok: <strong class="text-${alertColorMap[alert.alertType]}">${alert.currentQuantity}</strong> / 
                                        Eşik: ${alert.thresholdQuantity}
                                    </p>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> ${new Date(alert.createdDate).toLocaleString('tr-TR')}
                                    </small>
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-success" onclick="resolveAlert(${alert.id})">
                                        <i class="bi bi-check-circle"></i> Çöz
                                    </button>
                                </div>
                            </div>
                        `;
                        container.appendChild(item);
                    });
                })
                .catch(err => {
                    console.error(err);
                    document.getElementById('stockAlertsContainer').innerHTML = 
                        '<div class="text-center py-4 text-danger">Veriler yüklenemedi</div>';
                });
        }
        
        function checkAllProducts() {
            const btn = event.target.closest('button');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Kontrol ediliyor...';
            
            fetch('/api/stockalertsapi/check-all', { method: 'POST' })
                .then(() => {
                    alert('Stok kontrolü tamamlandı!');
                    loadStockAlerts();
                })
                .catch(err => alert('İşlem başarısız'))
                .finally(() => {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-arrow-repeat"></i> Tüm Stokları Kontrol Et';
                });
        }
        
        function resolveAlert(id) {
            const notes = prompt('Çözüm notları (opsiyonel):');
            
            fetch(`/api/stockalertsapi/${id}/resolve`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ notes: notes || '' })
            })
                .then(() => {
                    alert('Uyarı çözüldü');
                    loadStockAlerts();
                })
                .catch(err => alert('İşlem başarısız'));
        }
        
        document.addEventListener('DOMContentLoaded', loadStockAlerts);
    </script>
}

