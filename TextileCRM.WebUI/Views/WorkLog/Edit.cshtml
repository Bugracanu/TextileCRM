@model TextileCRM.Domain.Entities.WorkLog

@{
    ViewData["Title"] = "Çalışma Kaydı Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <!-- Başlık Bölümü -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="mb-1">
                        <i class="bi bi-pencil-square text-secondary"></i> Çalışma Kaydı Düzenle
                    </h1>
                    <p class="text-muted mb-0">
                        <i class="bi bi-hash"></i> Kayıt ID: <strong>@Model.Id</strong>
                    </p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />
                        
                        <!-- Çalışan Seçimi -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-person-fill text-secondary"></i> Çalışan Bilgisi
                            </h5>
                            
                            <div class="mb-3">
                                <label asp-for="EmployeeId" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge"></i> Çalışan <span class="text-danger">*</span>
                                </label>
                                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees" required></select>
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Zaman Bilgileri -->
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-clock-fill text-secondary"></i> Mesai Zamanı
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CheckInTime" class="form-label fw-semibold">
                                        <i class="bi bi-box-arrow-in-right text-success"></i> Giriş Zamanı <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="CheckInTime" class="form-control" type="datetime-local" required />
                                    <span asp-validation-for="CheckInTime" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CheckOutTime" class="form-label fw-semibold">
                                        <i class="bi bi-box-arrow-left text-danger"></i> Çıkış Zamanı
                                    </label>
                                    <input asp-for="CheckOutTime" class="form-control" type="datetime-local" />
                                    <small class="form-text text-muted">Devam eden mesai için boş bırakın</small>
                                    <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="WorkHours" class="form-label fw-semibold">
                                    <i class="bi bi-stopwatch"></i> Çalışma Saati
                                </label>
                                <div class="input-group">
                                    <input asp-for="WorkHours" class="form-control" type="number" step="0.01" min="0" />
                                    <span class="input-group-text">saat</span>
                                </div>
                                <small class="form-text text-muted">Otomatik hesaplanır veya manuel girebilirsiniz</small>
                                <span asp-validation-for="WorkHours" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Notlar -->
                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-semibold">
                                <i class="bi bi-sticky"></i> Notlar
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Mesai hakkında notlar..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <!-- Form Butonları -->
                        <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-secondary btn-lg">
                                <i class="bi bi-save-fill"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bilgilendirme Kartı -->
            <div class="alert alert-warning mt-3 d-flex align-items-start">
                <i class="bi bi-exclamation-triangle fs-4 me-3"></i>
                <div>
                    <strong>Dikkat:</strong> Mesai kayıtlarını değiştirmek, raporları etkileyebilir.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
