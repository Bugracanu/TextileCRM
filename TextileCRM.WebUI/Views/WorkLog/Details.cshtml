@model TextileCRM.Domain.Entities.WorkLog

@{
    ViewData["Title"] = "Çalışma Kaydı Detayı";
}

<div class="container">
    <h1>Çalışma Kaydı Detayı</h1>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Çalışan</dt>
                <dd class="col-sm-9">@(Model.Employee != null ? ($"{Model.Employee.FirstName} {Model.Employee.LastName}") : ($"Çalışan #{Model.EmployeeId}"))</dd>

                <dt class="col-sm-3">Giriş Zamanı</dt>
                <dd class="col-sm-9">@Model.CheckInTime.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Çıkış Zamanı</dt>
                <dd class="col-sm-9">
                    @if (Model.CheckOutTime.HasValue)
                    {
                        @Model.CheckOutTime.Value.ToString("dd/MM/yyyy HH:mm")
                    }
                    else
                    {
                        <span class="badge bg-warning">Devam Ediyor</span>
                    }
                </dd>

                <dt class="col-sm-3">Çalışma Süresi</dt>
                <dd class="col-sm-9">
                    @if (Model.WorkHours.HasValue)
                    {
                        @($"{Model.WorkHours.Value:F2} saat")
                    }
                    else if (Model.CheckOutTime.HasValue)
                    {
                        var duration = Model.CheckOutTime.Value - Model.CheckInTime;
                        @($"{duration.TotalHours:F2} saat")
                    }
                    else
                    {
                        <span>-</span>
                    }
                </dd>

                <dt class="col-sm-3">Notlar</dt>
                <dd class="col-sm-9">@Model.Notes</dd>

                <dt class="col-sm-3">Oluşturma Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
        @if (!Model.CheckOutTime.HasValue)
        {
            <form asp-action="CheckOut" method="post" style="display: inline;">
                <input type="hidden" name="workLogId" value="@Model.Id" />
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                </button>
            </form>
        }
    </div>
</div>

