@model IEnumerable<TextileCRM.Domain.Entities.WorkLog>

@{
    ViewData["Title"] = "Çalışma Kayıtları";
}

<div class="container">
    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-clock-history text-secondary"></i> Çalışma Kayıtları
            <span class="badge bg-secondary ms-2">@Model.Count()</span>
        </h1>
        <a asp-action="Create" class="btn btn-secondary btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Kayıt Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;" class="text-center">ID</th>
                                <th>Çalışan</th>
                                <th style="width: 160px;">Giriş Zamanı</th>
                                <th style="width: 160px;">Çıkış Zamanı</th>
                                <th style="width: 100px;" class="text-center">Toplam Süre</th>
                                <th style="width: 150px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="worklog-row">
                                    <td class="text-center align-middle">
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <strong>@(item.Employee != null ? ($"{item.Employee.FirstName} {item.Employee.LastName}") : ($"Çalışan #{item.EmployeeId}"))</strong>
                                    </td>
                                    <td class="align-middle">
                                        <i class="bi bi-box-arrow-in-right text-success"></i>
                                        @item.CheckInTime.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td class="align-middle">
                                        @if (item.CheckOutTime.HasValue)
                                        {
                                            <i class="bi bi-box-arrow-left text-danger"></i>
                                            @item.CheckOutTime.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> Devam Ediyor
                                            </span>
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (item.CheckOutTime.HasValue)
                                        {
                                            var duration = item.CheckOutTime.Value - item.CheckInTime;
                                            <span class="badge bg-info">
                                                <i class="bi bi-stopwatch"></i> @duration.ToString(@"hh\:mm")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (!item.CheckOutTime.HasValue)
                                            {
                                                <form asp-action="CheckOut" method="post" style="display: inline;">
                                                    <input type="hidden" name="workLogId" value="@item.Id" />
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-outline-success" 
                                                            title="Çıkış Yap">
                                                        <i class="bi bi-box-arrow-right"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3"></i>
            <div>
                <strong>Henüz çalışma kaydı bulunmamaktadır.</strong>
                <p class="mb-0">Yeni kayıt eklemek için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        </div>
    }
</div>