@model IEnumerable<TextileCRM.Domain.Entities.Customer>

@{
    ViewData["Title"] = "Müşteriler";
}

<div class="container">
    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-people-fill text-primary"></i> Müşteriler
            <span class="badge bg-primary ms-2">@Model.Count()</span>
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Müşteri Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;" class="text-center">ID</th>
                                <th>Müşteri Bilgileri</th>
                                <th>İletişim</th>
                                <th style="width: 120px;">Kayıt Tarihi</th>
                                <th style="width: 120px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="customer-row">
                                    <td class="text-center align-middle">
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <div>
                                            <strong class="d-block">@item.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.CompanyName))
                                            {
                                                <small class="text-muted">
                                                    <i class="bi bi-building"></i> @item.CompanyName
                                                </small>
                                            }
                                            @if (!string.IsNullOrEmpty(item.ContactName))
                                            {
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-person"></i> @item.ContactName
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <div>
                                            <a href="mailto:@item.Email" class="d-block text-decoration-none mb-1" title="Email gönder">
                                                <i class="bi bi-envelope"></i> @item.Email
                                            </a>
                                            <a href="tel:@item.Phone" class="d-block text-decoration-none" title="Ara">
                                                <i class="bi bi-telephone"></i> @item.Phone
                                            </a>
                                            @if (!string.IsNullOrEmpty(item.Address))
                                            {
                                                <small class="text-muted d-block mt-1" title="@item.Address">
                                                    <i class="bi bi-geo-alt"></i> @(item.Address.Length > 30 ? item.Address.Substring(0, 30) + "..." : item.Address)
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">
                                            @item.CreatedDate.ToString("dd MMM yyyy")
                                        </small>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger" 
                                               title="Sil"
                                               onclick="return confirm('Bu müşteriyi silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3"></i>
            <div>
                <strong>Henüz müşteri kaydı bulunmamaktadır.</strong>
                <p class="mb-0">Yeni müşteri eklemek için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        </div>
    }
</div>