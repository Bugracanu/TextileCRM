@model TextileCRM.Domain.Entities.Customer

@{
    ViewData["Title"] = "Müşteri Sil";
}

<div class="container">
    <h1>Müşteri Sil</h1>

    <h3 class="text-danger">Bu müşteriyi silmek istediğinize emin misiniz?</h3>
    
    <div class="card mb-3">
        <div class="card-body">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Müşteri Adı</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>E-posta</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Telefon</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>Adres</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th>Kayıt Tarihi</th>
                        <td>@Model.CreatedDate.ToShortDateString()</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> İptal
        </a>
    </form>
</div>