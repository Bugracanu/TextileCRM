@model IEnumerable<TextileCRM.Domain.Entities.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="container">
    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-box-seam text-info"></i> Ürünler
            <span class="badge bg-info ms-2">@Model.Count()</span>
        </h1>
        <a asp-action="Create" class="btn btn-info btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;" class="text-center">ID</th>
                                <th>Ürün Bilgileri</th>
                                <th style="width: 150px;">Kategori</th>
                                <th style="width: 120px;" class="text-end">Fiyat</th>
                                <th style="width: 100px;" class="text-center">Stok</th>
                                <th style="width: 120px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="product-row">
                                    <td class="text-center align-middle">
                                        <span class="badge bg-secondary">#@item.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <div>
                                            <strong class="d-block">@item.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Code))
                                            {
                                                <small class="text-muted">
                                                    <i class="bi bi-upc-scan"></i> @item.Code
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge bg-light text-dark">@item.Category</span>
                                    </td>
                                    <td class="align-middle text-end">
                                        <strong>@item.UnitPrice.ToString("C")</strong>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="badge @(item.StockQuantity > 10 ? "bg-success" : item.StockQuantity > 0 ? "bg-warning text-dark" : "bg-danger")">
                                            @item.StockQuantity adet
                                        </span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger" 
                                               title="Sil"
                                               onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3"></i>
            <div>
                <strong>Henüz ürün kaydı bulunmamaktadır.</strong>
                <p class="mb-0">Yeni ürün eklemek için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        </div>
    }
</div>