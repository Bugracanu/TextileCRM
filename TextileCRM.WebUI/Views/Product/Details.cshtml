@model TextileCRM.Domain.Entities.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<div class="container">
    <h1>Ürün Detayı</h1>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Ürün Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Ürün Kodu</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Birim Fiyat</dt>
                <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>

                <dt class="col-sm-3">Fiyat</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Stok Miktarı</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.StockQuantity > 10 ? "bg-success" : Model.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                        @Model.StockQuantity
                    </span>
                </dd>

                <dt class="col-sm-3">Oluşturma Tarihi</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div>

