@using System.Linq
@using TextileCRM.Domain.Entities
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid px-0 mt-0">
    <div class="row g-0">
        <!-- Sol Sidebar -->
        <div class="col-md-3 px-2">
            <div class="d-flex flex-column gap-2">
                <a asp-controller="Customer" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-primary text-white">
                        <div class="card-body py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0"><i class="bi bi-people"></i> Müşteriler</h6>
                                </div>
                                <h4 class="mb-0">@ViewBag.CustomerCount</h4>
                            </div>
                        </div>
                    </div>
                </a>
                
                <a asp-controller="Order" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-success text-white">
                        <div class="card-body py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0"><i class="bi bi-cart3"></i> Siparişler</h6>
                                </div>
                                <h4 class="mb-0">@ViewBag.OrderCount</h4>
                            </div>
                        </div>
                    </div>
                </a>
                
                <a asp-controller="Product" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-info text-white">
                        <div class="card-body py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0"><i class="bi bi-box-seam"></i> Ürünler</h6>
                                </div>
                                <h4 class="mb-0">@ViewBag.ProductCount</h4>
                            </div>
                        </div>
                    </div>
                </a>
                
                <a asp-controller="Employee" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-warning text-white">
                        <div class="card-body py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0"><i class="bi bi-person-badge"></i> Çalışanlar</h6>
                                </div>
                                <h4 class="mb-0">@ViewBag.EmployeeCount</h4>
                            </div>
                        </div>
                    </div>
                </a>
                
                <a asp-controller="WorkLog" asp-action="Index" class="text-decoration-none">
                    <div class="card bg-dark text-white">
                        <div class="card-body py-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0"><i class="bi bi-clock-history"></i> Çalışma Kayıtları</h6>
                                </div>
                                <h4 class="mb-0">@ViewBag.WorkLogCount</h4>
                            </div>
                        </div>
                    </div>
                </a>
                
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                        <div class="card bg-secondary text-white">
                            <div class="card-body py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0"><i class="bi bi-people-fill"></i> Kullanıcılar</h6>
                                    </div>
                                    <h4 class="mb-0"><i class="bi bi-shield-lock"></i></h4>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
        
        <!-- Sağ İçerik Alanı -->
        <div class="col-md-9 px-3">
    <!-- Son Siparişler -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Son Siparişler</h5>
                </div>
                <div class="card-body">
                    @{ var recentOrders = ViewBag.RecentOrders as IEnumerable<Order>; }
                    @if (recentOrders != null && recentOrders.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Sipariş No</th>
                                    <th>Müşteri</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>Toplam</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in recentOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@(order.Customer?.CompanyName ?? ($"Müşteri #{order.CustomerId}"))</td>
                                        <td>@order.OrderDate.ToShortDateString()</td>
                                        <td>@order.Status</td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary me-1">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Henüz sipariş bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>
    </div>
        </div>
    </div>
</div>
