@using System.Linq
@using TextileCRM.Domain.Entities
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container">
    <h1 class="display-4 mb-4">Tekstil CRM Dashboard</h1>
    
    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Müşteriler</h5>
                    <p class="card-text display-6">@ViewBag.CustomerCount</p>
                    <a asp-controller="Customer" asp-action="Index" class="text-white">Detaylar <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cart3"></i> Siparişler</h5>
                    <p class="card-text display-6">@ViewBag.OrderCount</p>
                    <a asp-controller="Order" asp-action="Index" class="text-white">Detaylar <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam"></i> Ürünler</h5>
                    <p class="card-text display-6">@ViewBag.ProductCount</p>
                    <a asp-controller="Product" asp-action="Index" class="text-white">Detaylar <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-badge"></i> Çalışanlar</h5>
                    <p class="card-text display-6">@ViewBag.EmployeeCount</p>
                    <a asp-controller="Employee" asp-action="Index" class="text-white">Detaylar <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Son Siparişler -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Son Siparişler</h5>
                </div>
                <div class="card-body">
                    @{ var recentOrders = ViewBag.RecentOrders as IEnumerable<Order>; }
                    @if (recentOrders != null && recentOrders.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Sipariş No</th>
                                    <th>Müşteri</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>Toplam</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in recentOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@(order.Customer?.CompanyName ?? ($"Müşteri #{order.CustomerId}"))</td>
                                        <td>@order.OrderDate.ToShortDateString()</td>
                                        <td>@order.Status</td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                        <td>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Henüz sipariş bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
