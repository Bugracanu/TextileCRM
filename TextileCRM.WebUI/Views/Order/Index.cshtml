@model IEnumerable<TextileCRM.Domain.Entities.Order>

@{
    ViewData["Title"] = "Siparişler";
}

<div class="container">
    <!-- Başlık ve Butonlar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="bi bi-cart3 text-success"></i> Siparişler
            <span class="badge bg-success ms-2">@Model.Count()</span>
        </h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Yeni Sipariş Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 80px;" class="text-center">Sipariş No</th>
                                <th>Müşteri</th>
                                <th style="width: 120px;">Tarih</th>
                                <th style="width: 150px;">Durum</th>
                                <th style="width: 130px;" class="text-end">Toplam</th>
                                <th style="width: 120px;" class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="order-row">
                                    <td class="text-center align-middle">
                                        <span class="badge bg-dark">#@item.Id</span>
                                    </td>
                                    <td class="align-middle">
                                        <strong>@(item.Customer?.Name ?? item.Customer?.CompanyName ?? $"Müşteri #{item.CustomerId}")</strong>
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">@item.OrderDate.ToString("dd MMM yyyy")</small>
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge @(item.Status == TextileCRM.Domain.Entities.OrderStatus.Completed ? "bg-success" : 
                                                            item.Status == TextileCRM.Domain.Entities.OrderStatus.InProduction ? "bg-warning text-dark" : 
                                                            item.Status == TextileCRM.Domain.Entities.OrderStatus.Cancelled ? "bg-danger" : "bg-info")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="align-middle text-end">
                                        <strong>@item.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary" 
                                               title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger" 
                                               title="Sil"
                                               onclick="return confirm('Bu siparişi silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle fs-4 me-3"></i>
            <div>
                <strong>Henüz sipariş kaydı bulunmamaktadır.</strong>
                <p class="mb-0">Yeni sipariş eklemek için yukarıdaki butonu kullanabilirsiniz.</p>
            </div>
        </div>
    }
</div>