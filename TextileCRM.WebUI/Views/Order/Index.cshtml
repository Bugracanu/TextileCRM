@model IEnumerable<TextileCRM.Domain.Entities.Order>

@{
    ViewData["Title"] = "Siparişler";
}

<div class="container">
    <h1>Siparişler</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Sipariş
        </a>
    </p>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sipariş No</th>
                            <th>Müşteri</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Toplam</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@(item.Customer?.CompanyName ?? ($"Müşteri #{item.CustomerId}"))</td>
                                <td>@item.OrderDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge @(item.Status == TextileCRM.Domain.Entities.OrderStatus.Completed ? "bg-success" : 
                                                        item.Status == TextileCRM.Domain.Entities.OrderStatus.InProduction ? "bg-warning" : 
                                                        item.Status == TextileCRM.Domain.Entities.OrderStatus.Cancelled ? "bg-danger" : "bg-info")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>@item.TotalAmount.ToString("C")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Henüz sipariş kaydı bulunmamaktadır. Yeni sipariş eklemek için yukarıdaki butonu kullanabilirsiniz.
        </div>
    }
</div>