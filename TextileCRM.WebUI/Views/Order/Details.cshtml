@model TextileCRM.Domain.Entities.Order

@{
    ViewData["Title"] = "Sipariş Detayı";
}

<div class="container">
    <h1>Sipariş Detayı</h1>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Sipariş No</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Müşteri</dt>
                        <dd class="col-sm-8">@(Model.Customer?.CompanyName ?? ($"Müşteri #{Model.CustomerId}"))</dd>

                        <dt class="col-sm-4">Sipariş Tarihi</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">Teslim Tarihi</dt>
                        <dd class="col-sm-8">@(Model.DeliveryDate?.ToShortDateString() ?? "-" )</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Durum</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == TextileCRM.Domain.Entities.OrderStatus.Completed ? "bg-success" : 
                                                Model.Status == TextileCRM.Domain.Entities.OrderStatus.InProduction ? "bg-warning" : 
                                                Model.Status == TextileCRM.Domain.Entities.OrderStatus.Cancelled ? "bg-danger" : "bg-info")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Toplam</dt>
                        <dd class="col-sm-8">@Model.TotalAmount.ToString("C")</dd>

                        <dt class="col-sm-4">Notlar</dt>
                        <dd class="col-sm-8">@Model.Notes</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">Ürün Kalemleri</div>
        <div class="card-body">
            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Miktar</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>@(item.Product?.Name ?? ($"Ürün #{item.ProductId}"))</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.TotalPrice.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-muted">Bu siparişe ait ürün kalemi bulunmuyor.</div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    </div>
</div>