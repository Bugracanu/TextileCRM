@model TextileCRM.Domain.Entities.Order

@{
    ViewData["Title"] = "Sipariş Düzenle";
}

<div class="container">
    <h1>Sipariş Düzenle</h1>

    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                
                <div class="form-group mb-3">
                    <label asp-for="CustomerId" class="control-label">Müşteri</label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="OrderDate" class="control-label">Sipariş Tarihi</label>
                    <input asp-for="OrderDate" class="form-control" type="date" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="DeliveryDate" class="control-label">Teslim Tarihi</label>
                    <input asp-for="DeliveryDate" class="form-control" type="date" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label">Durum</label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<TextileCRM.Domain.Entities.OrderStatus>()"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="TotalAmount" class="control-label">Toplam Tutar</label>
                    <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label">Notlar</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

